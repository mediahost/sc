<!DOCTYPE html>
<!--[if IE 8]> <html lang="{$lang}" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="{$lang}" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="{$lang}">
	<!--<![endif]-->
	{includeblock '../../BaseModule/templates/metronic.defines.latte'}

	<!-- BEGIN HEAD -->
	<head>
		<title>{block title|striptags}{_'Source-Code'}{/block}</title>

		<meta charset="utf-8"/>
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta content="width=device-width, initial-scale=1.0" name="viewport"/>
		<meta name="robots" content="noindex,nofollow">
		<meta content="" name="description"/>
		<meta content="" name="author"/>

		{include cssMetronicCore}
		{include cssMetronicPlugins}
		{include cssMetronicTheme}

		{control cssFront}
		{control cssPrint}

		<link href="{$basePath}/favicon.ico" rel="shortcut icon">

		{block head}{/block}
	</head>
	<!-- END HEAD -->

	<!-- BEGIN BODY -->
	<body class="{block bodyClass}{/block}">
		<script> document.documentElement.className += ' js'</script>

		<div n:foreach="$flashes as $flash"
			 class="flash toast-ready hidden"
			 data-type="{$flash->type}">
			{$flash->message}
		</div>

		{block layout}
		<div class="logo">
			<a n:href="Homepage:">
				<img src="{$basePath}/assets/img/logo.png" alt=""/>
			</a>
		</div>

		<div class="content">
			{include #content}
		</div>
		{/block}
		
		<div class="copyright">
			 2014 &copy; {_'Source-Code by Mediahost'}.
		</div>

		{block scripts}
		<!-- BEGIN JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
		{include jsMetronicCore}
		{include jsMetronicPlugins}
		{include jsApp}
		<!-- END JAVASCRIPTS -->
		{/block}
	</body>
</html>
