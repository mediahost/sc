{block pageTitle}
	{_'Users'}
{/block}

{block content}
	<div class="row">
		<div class="col-md-8">

			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						{if $userEntity->isNew()}
							{_'New user'}
						{else}
							{_'User #%id%', ['id' => $userEntity->id]}
						{/if}
					</h4>
				</div>
				<div class="panel-body">
					{control userForm}
				</div>
			</div>

		</div>
	</div>
{/block}
