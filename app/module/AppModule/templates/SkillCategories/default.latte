{block pageTitle}
	{_'Skill Categories'}
{/block}

{block breadcrumbItems}
	<li>
		<a n:href="this">{_'Skill Categories'}</a>
	</li>
{/block}

{block content}
	<a href="{plink SkillCategories:add}" class="btn btn-default DTTT_button_copy">
		<span>{_'Add Skill category'}</span>
	</a>
	<div class="row">
		<div class="col-md-12">
			<div class="portlet light">
				<div class="portlet-body">
					{control skillCategoriesGrid}
				</div>
			</div>
		</div>
	</div>
{/block content}
