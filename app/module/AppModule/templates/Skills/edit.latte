{block pageTitle}
	{_'Skills'}
{/block}

{block content}
	<div class="row">
		<div class="col-md-8">

			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						{if $skill->isNew()}
							{_'New skill'}
						{else}
							{_'Skill #%id%', ['id' => $skill->id]}
						{/if}
					</h4>
				</div>
				<div class="panel-body">
					{control skillForm}
				</div>
			</div>

		</div>
	</div>
{/block}
