{layout '../@layout.latte'}

{block subtitle}
	<font size="+1" color="#00285A">{_'Recover Your password'}</font>
{/block}

{block content}
<table class="container content" align="center">
	<tr>
		<td>
			<table class="row note">
				<tr>
					<td class="wrapper last">
						<h4 style="font-size: 22px;display: block;margin: 5px 0 15px 0;">
							{_'You can set your password'}
						</h4>
						<p>
							{_'Please click'}
							<a href={$link}>{_'here'}</a>
							{_'to set you password.'}
						</p>
						<p>
							{_'Or copy this URL and insert it in your browser:'}<br/>
							<a href={$link}>{$link}</a>
						</p>
						<p>
							{_'The link will expire in an hour.'}
						</p>
					</td>
				</tr>
			</table>
		</td>
	</tr>
</table>