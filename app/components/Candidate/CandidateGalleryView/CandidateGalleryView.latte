{**
 * CandidateGalleryView control template
 *
 * @param   Cv[]     $cvs	
*}

<div class="row">
    <div class="col-lg-9">
        <div class="row gallery sortable-layout ui-sortable">
            <div n:inner-foreach="$cvs as $cv" class="col-md-4 col-xs-12">
                {if $iterator->counter%3 == 1}{control candidatePreview-$cv->id}{/if}
            </div>
            <div n:inner-foreach="$cvs as $cv" class="col-md-4 col-xs-12">
                {if $iterator->counter%3 == 2}{control candidatePreview-$cv->id}{/if}
            </div>
            <div n:inner-foreach="$cvs as $cv" class="col-md-4 col-xs-12">
                {if $iterator->counter%3 == 0}{control candidatePreview-$cv->id}{/if}
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="page-header"><h5>{_'Skill filter'}</h5></div>
        {control skillsFilter:preview}
        
        <div class="page-header"><h5>{_'Jobs'}</h5></div>
        {control matchingControl}
    </div>
</div>



<div class="modal fade" id="resetFilter">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">Ã—</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" >{_'Skill filter'}</h4>
            </div>
            <div class="modal-body">
                {control skillsFilter}
            </div>
        </div>
    </div>
</div>

