{block}
{* Recovery form *}
{form recoveryForm}
    <h3 class="form-title">{_'Password recovery'}</h3>
    <p>
        {_'Enter your new password'}:
    </p>
    <div class="alert alert-danger" n:if="$form->ownErrors">
        <button class="close" data-close="alert"></button>
        {foreach $form->ownErrors as $error}
            <span>{$error}</span><br n:if="!$iterator->isLast()"/>
        {/foreach}
    </div>

    <div class="form-group">
        {label password, class=>'control-label visible-ie8 visible-ie9' /}
        <div class="input-icon">
            <i class="fa fa-lock"></i>
            {input password, class=>'form-control placeholder-no-fix'}
        </div>
    </div>

    <div class="form-group">
        {label password_verify, class=>'control-label visible-ie8 visible-ie9' /}
        <div class="input-icon">
            <i class="fa fa-check"></i>
            {input password_verify, class=>'form-control placeholder-no-fix'}
        </div>
    </div>

    <div class="form-actions">
        {button cancel, class=>'btn'}
        <i class="m-icon-swapleft"></i> {caption}
        {/button}
        {button recovery, class=>'btn green pull-right'}
        {caption}
        <i class="m-icon-swapright m-icon-white"></i>
        {/button}
    </div>
{/form}
{/block}
